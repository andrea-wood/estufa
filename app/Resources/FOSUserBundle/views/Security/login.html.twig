{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
  {% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
  {% endfor %}

  <div class="jumbotron" style="max-width:400px;margin:40px auto;">
    <div class="row text-center" style="margin-bottom: 40px;">
	  	<img src="{{ asset('img/logo.png') }}" class="img-responsive" style="width:100px;margin:auto;">
	  	<span><strong>QUINTA S. ANTONIO</strong></span>
	  </div>
	<form action="{{ path("fos_user_security_check") }}" method="post">
	    {% if csrf_token %}
	        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	    {% endif %}
	  <div class="form-group">
	    <label for="exampleInputEmail1">Nome de utilizador</label>
	    <input type="text" class="form-control" placeholder="Nome de utilizador" value="{{ last_username }}" name="_username" required="required">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputPassword1">Password</label>
	    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="_password" required="required">
	  </div>
	  <!--<div class="checkbox">
	    <label>
	      <input type="checkbox" id="remember_me" name="_remember_me" > Check me out
	    </label>
	  </div>-->
	  <button type="submit" class="btn btn-default" id="_submit" name="_submit">Submit</button>
	</form>
  </div>
{% endblock fos_user_content %}